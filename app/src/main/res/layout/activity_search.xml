<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent"
    tools:context="com.doctor.yuyi.activity.SearchActivity">
<RelativeLayout
    android:id="@+id/top"
    android:background="@color/color_white"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bas"
        android:layout_toLeftOf="@+id/searchac_cancle"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="30dp"
        android:orientation="horizontal">
    <ImageView
       android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/search"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:clickable="true"
        android:onClick="Search"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
        <EditText
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:paddingRight="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text=""
            android:hint="搜索患者"
            android:textColorHint="#999999"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:id="@+id/searchac_editext"/>
    </LinearLayout>
    <TextView
        android:clickable="true"
        android:onClick="goBack"
        android:text="取消"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#333333"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchac_cancle"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"/>
</RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.doctor.yuyi.myview.MyListV
                android:scrollbars="none"
                android:layout_alignParentTop="true"
                android:divider="#f2f2f2"
                android:dividerHeight="10dp"
                android:id="@+id/searchac_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_above="@+id/clearTextView"
                android:paddingRight="10dp">
            </com.doctor.yuyi.myview.MyListV>
            <TextView
                android:clickable="true"
                android:onClick="Clear"
                android:background="@drawable/myback"
                android:id="@+id/clearTextView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textColor="#ffffff"
                android:text="清除记录"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="15sp"/>
        </RelativeLayout>

</RelativeLayout>
