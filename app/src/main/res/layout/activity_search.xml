<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.doctor.yuyi.activity.SearchActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/searchlayout"
        android:layout_toLeftOf="@+id/searchac_cancle"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_marginLeft="10dp"
        android:src="@mipmap/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <EditText
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#aaa9a9"
            android:textSize="14sp"
            android:hint="搜索患者"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:id="@+id/searchac_editext"/>
    </LinearLayout>
    <TextView
        android:clickable="true"
        android:onClick="goBack"
        android:text="取消"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#25f368"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchac_cancle"/>
</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.doctor.yuyi.myview.MyListView
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:dividerHeight="1dp"
                android:divider="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/searchac_listview">
            </com.doctor.yuyi.myview.MyListView>
            <LinearLayout
                android:clickable="true"
                android:onClick="clear"
                android:id="@+id/searchac_layoutclear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </TextView>
                <TextView
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:textColor="#25f368"
                    android:textSize="14sp"
                    android:text="清除全部"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
