<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/textSize14"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/forumpost_listitem_title_praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2b2b2b"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/forumposts_listview_item_photoImage_praise"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="#6a6a6a"
                android:textSize="13sp"
                android:text=""
                android:id="@+id/forumpost_listitem_content_praise"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:text=""
                android:textColor="#cccccc"
                android:textSize="11sp"
                android:id="@+id/forumpost_listitem_time_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:id="@+id/forumpost_listitem_layout_msg_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/comment"
                    android:id="@+id/forumposts_listview_item_msgImage_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:text=""
                    android:id="@+id/forumposts_listview_item_msgNum_praise"
                    android:textSize="11sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/forumpost_listitem_layout_msg_praise"
                android:orientation="horizontal"
                android:id="@+id/forumpost_listitem_layout_post_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_marginRight="7dp"
                    android:background="@drawable/postdate"
                    android:id="@+id/forumposts_listview_item_postImage_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/forumposts_listview_item_postNum_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:text=""
                    android:textSize="11sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>