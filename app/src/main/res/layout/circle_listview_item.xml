<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/forumpost_listitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/forumposts_title"
            android:textColor="#2b2b2b"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_head"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/doc" />

            <TextView
                android:id="@+id/forumpost_listitem_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/forumposts_content"
                android:textColor="#6a6a6a"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/forumpost_listitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="3小时前"
                android:textColor="#cccccc"
                android:textSize="11sp" />

            <LinearLayout
                android:padding="5dp"
                android:id="@+id/forumpost_listitem_layout_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/forumposts_listview_item_msgImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/comment" />

                <TextView
                    android:id="@+id/forumposts_listview_item_msgNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="231"
                    android:textColor="#cccccc"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:id="@+id/forumpost_listitem_layout_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/forumpost_listitem_layout_msg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/forumposts_listview_item_postImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/like_selected" />

                <TextView
                    android:id="@+id/forumposts_listview_item_postNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2112"
                    android:textColor="#cccccc"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>