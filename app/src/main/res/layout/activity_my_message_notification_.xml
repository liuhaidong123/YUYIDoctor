<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_message_notification_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
    tools:context="com.doctor.yuyi.activity.My_message_notification_Activity">
        <include layout="@layout/activity_titleinclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:descendantFocusability="blocksDescendants">
                        <com.doctor.yuyi.myview.MyListView
                            android:background="@null"
                            android:divider="#ffffff"
                            android:dividerHeight="0dp"
                            android:id="@+id/my_message_notifi_listview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </com.doctor.yuyi.myview.MyListView>
                        <RelativeLayout
                            android:layout_below="@+id/my_message_notifi_listview"
                            android:background="#f2f2f2"
                            android:id="@+id/my_message_notifi_loading_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="15dp"
                                    android:paddingTop="15dp"
                                    android:orientation="horizontal">
                                        <ProgressBar
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:id="@+id/my_message_notifi_loading_progress"/>
                                        <TextView
                                            android:layout_gravity="center_vertical"
                                            android:id="@+id/my_message_notifi_loading_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="正在加载。。。"
                                            android:textSize="15sp"/>
                                </LinearLayout>
                        </RelativeLayout>
                </RelativeLayout>
        </ScrollView>

</LinearLayout>
