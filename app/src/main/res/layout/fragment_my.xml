<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="fragment.MyFragment">
    <ScrollView
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/myback"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="225dp">
                <FrameLayout
                    android:id="@+id/my_top_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">
                        <ImageView
                            android:id="@+id/my_image_message"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_width="40dp"
                            android:padding="10dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/informt"/>
                        <ImageView
                            android:id="@+id/my_image_setting"
                            android:layout_centerVertical="true"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/setting"/>
                    </RelativeLayout>
                </FrameLayout>
                <LinearLayout
                    android:clickable="true"
                    android:id="@+id/my_userLayout"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.doctor.yuyi.lzh_utils.RoundImageView
                        android:src="@mipmap/userdefault"
                        android:scaleType="fitCenter"
                        android:id="@+id/my_image_photo"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        />
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/my_layout_top"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:text="姓名"
                            android:textColor="#ffffff"
                            android:id="@+id/my_textV_docName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/my_textV_zhicheng"
                            android:text="职称"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/my_layout_top"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:text="医院"
                            android:textColor="#ffffff"
                            android:id="@+id/my_textV_hosName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:text="科室"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:id="@+id/my_textV_ksName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2">
                <!--帖子，点赞-->
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/L_color_white">
                    <!--帖子-->
                    <RelativeLayout
                        android:id="@+id/my_relative_tiezi"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的帖子"
                            android:layout_centerVertical="true"
                            android:textColor="@color/L_color_textNomol"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/many"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/e5"/>
                    <!--点赞-->
                    <RelativeLayout
                        android:id="@+id/my_relative_dianzan"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的点赞"
                            android:layout_centerVertical="true"
                            android:textColor="@color/L_color_textNomol"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/many"/>
                    </RelativeLayout>
                </LinearLayout>
                <!--帖子，点赞-->


                <!--咨询，查看数据，挂号接受-->
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/L_color_white">
                    <!--咨询-->
                    <RelativeLayout
                        android:id="@+id/my_relative_zixun"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="咨询"
                            android:layout_centerVertical="true"
                            android:textColor="@color/L_color_textNomol"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/many"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/e5"/>
                    <!--查看数据-->
                    <RelativeLayout
                        android:id="@+id/my_relative_shuju"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看数据"
                            android:layout_centerVertical="true"
                            android:textColor="@color/L_color_textNomol"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/many"/>
                    </RelativeLayout>

                    <!--挂号接收-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/e5"/>
                    <RelativeLayout
                        android:id="@+id/my_relative_guahao"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="挂号接收"
                            android:layout_centerVertical="true"
                            android:textColor="@color/L_color_textNomol"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/many"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
