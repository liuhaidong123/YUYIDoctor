<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_message_"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    tools:context="com.doctor.yuyi.activity.My_message_Activity">
        <include layout="@layout/activity_titleinclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <com.doctor.yuyi.myview.MyScrollowView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:onClick="getNotifi"
                android:id="@+id/my_message_notifi"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <com.doctor.yuyi.lzh_utils.RoundImageView
                android:id="@+id/my_message_titleImage"
                android:layout_width="40dp"
                android:src="@mipmap/informa"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp" />
                <RelativeLayout
                    android:paddingRight="15dp"
                    android:layout_toRightOf="@+id/my_message_titleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/fg"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                    <LinearLayout
                        android:id="@+id/my_message_notifi_layout"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_toLeftOf="@+id/my_message_notifi_time"
                                android:text="宇医公告"
                                android:layout_marginRight="15dp"
                                android:textSize="@dimen/textSize14"
                                android:textColor="@color/L_color_titleText"
                                android:id="@+id/my_message_notifi_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"/>
                            <TextView
                                android:textSize="@dimen/textSize12"
                                android:textColor="#999999"
                                android:layout_alignParentRight="true"
                                android:text="08:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/my_message_notifi_time"/>
                        </RelativeLayout>

                        <TextView
                            android:text="@string/my_message_notifi_title"
                            android:textSize="@dimen/textSize12"
                            android:textColor="@color/L_color_titleText"
                            android:id="@+id/my_message_notifi_msg"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>
            </RelativeLayout>

            </RelativeLayout>

            <com.doctor.yuyi.myview.MyListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ffffff"
                android:dividerHeight="0dp"
                android:background="@null"
                android:id="@+id/my_message_listview"
                android:layout_below="@+id/my_message_notifi"
                >

            </com.doctor.yuyi.myview.MyListView>
        </RelativeLayout>
    </com.doctor.yuyi.myview.MyScrollowView>


</LinearLayout>
