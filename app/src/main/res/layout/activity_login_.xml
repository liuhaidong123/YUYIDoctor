<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.doctor.yuyi.activity.Login_Activity">
<!--<include android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--layout="@layout/activity_titleinclude"></include>-->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#cccccc"/>-->


    <RelativeLayout
        android:id="@+id/activity_my_user_login_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
       >
        <com.doctor.yuyi.myview.XCRoundRectImageView
            android:id="@+id/my_userlogin_imageview"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_userlogin_imageview"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/my_userlogin_rela_name"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/my_userlogin_fg1"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="#cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/my_userlogin_fg1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7.5dp">

                    <ImageView
                        android:id="@+id/my_userlogin_imageUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/login_phone_icon_" />

                    <EditText
                        android:id="@+id/my_userlogin_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_userlogin_imageUserName"
                        android:background="@null"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingBottom="0dp"
                        android:text="17734862622"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_userlogin_rela_psd"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_below="@+id/my_userlogin_rela_name">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/my_userlogin_fg2"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7.5dp">

                    <ImageView
                        android:id="@+id/my_userlogin_imageUserPsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/login_lock_icon_" />

                    <RelativeLayout
                        android:id="@+id/my_userlogin_rela_SMScode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/my_userlogin_imageUserPsd">

                        <EditText
                            android:id="@+id/my_userlogin_edit_smdCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:paddingBottom="0dp"
                            android:text=""
                            android:textColor="#999999"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:id="@+id/layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/my_userlogin_SMStimer"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:paddingBottom="3dp"
                                android:text="59S"
                                android:textColor="#f21121"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/my_userlogin_getSMScode"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@+id/my_userlogin_SMStimer"
                                android:background="@drawable/my_userlogin_smscode"
                                android:gravity="center"
                                android:text="获取验证码"
                                android:textColor="#f9f9f9"
                                android:textSize="9sp" />

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/my_userlogin_fg2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="#cccccc" />
            </RelativeLayout>

            <TextView
                android:id="@+id/my_userlogin_logninButton"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_below="@+id/my_userlogin_rela_psd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/my_userlogin_loginbutton"
                android:clickable="true"
                android:gravity="center"
                android:onClick="Login"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
