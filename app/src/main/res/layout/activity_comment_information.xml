<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comment_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.doctor.yuyi.activity.CommentInformationActivity">

    <RelativeLayout
        android:id="@+id/equip_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/comment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/comment"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/equip_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/equip_title"
        android:background="@color/color_cancel" />

    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_below="@id/equip_line"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/color_normal"
            android:textSize="15sp" />

        <View
            android:id="@+id/title_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title_tv"
            android:background="@color/color_cancel" />

        <RelativeLayout
            android:id="@+id/share_relative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/title_line">

            <ImageView
                android:id="@+id/comment_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/comment_img2"
                android:text=""
                android:textColor="@color/color_ad"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/praise_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/color_ad"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/praise_num_tv"
                android:padding="5dp"
               />

            <TextView
                android:id="@+id/share_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@id/praise"
                android:text=""
                android:textColor="@color/color_ad"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/share_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/share_num_tv"
                android:padding="5dp"
                android:src="@mipmap/share" />
        </RelativeLayout>

        <View
            android:id="@+id/share_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/share_relative"
            android:background="@color/color_cancel" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_comment_box"
        android:layout_below="@id/title_relative"
        android:layout_marginBottom="20dp"
        android:background="@color/color_white"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.doctor.yuyi.myview.InformationListView
                android:id="@+id/comment_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:divider="@color/color_cancel"
                android:dividerHeight="1dp"
                android:scrollbars="none">

            </com.doctor.yuyi.myview.InformationListView>

            <View
                android:id="@+id/box_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/comment_listview"
                android:background="@color/color_cancel" />

            <RelativeLayout
                android:id="@+id/many_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/box_line"
                android:visibility="gone">

                <TextView
                    android:id="@+id/footer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:text="加载更多"
                    android:textColor="@color/color_normal"
                    android:textSize="13sp" />

                <ProgressBar
                    android:id="@+id/pbLocate"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/footer_tv"
                    android:paddingTop="15dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/box_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_cancel" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@id/card_comment_box"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/comment_bg">

        <ImageView
            android:id="@+id/writing_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/writing" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/writing_img"
            android:background="@null"
            android:hint="@string/comment_hint"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/color_bg"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>
