<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_praise_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.doctor.yuyi.activity.My_praise_Activity">
    <include android:layout_width="match_parent"
        android:id="@+id/title1"
        android:layout_height="wrap_content"
        layout="@layout/activity_titleinclude"></include>
    <TextView
        android:id="@+id/fg2"
        android:layout_below="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
        <ScrollView
            android:layout_below="@+id/fg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.doctor.yuyi.lzh_utils.MyEmptyListView
                    app:bitmap="@mipmap/nopraise"
                    app:emptyText="你还没有点赞哦"
                    android:dividerHeight="1dp"
                    android:divider="#eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/my_praise_listview">
                </com.doctor.yuyi.lzh_utils.MyEmptyListView>
                <RelativeLayout
                    android:background="#f2f2f2"
                    android:layout_below="@+id/my_praise_listview"
                    android:id="@+id/my_praise_loading_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <!--<TextView-->
                    <!--android:id="@+id/fg3"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="#f1f1f1"/>-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <ProgressBar
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/my_praise_loading_progress"/>
                        <TextView
                            android:id="@+id/my_praise_loding_text"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加载更多"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

</RelativeLayout>
