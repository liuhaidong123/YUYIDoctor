<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="13dp"
        android:orientation="vertical"
        android:background="@drawable/my_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="每日精选"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/my_message_notifi_list_time"
                android:layout_marginRight="15dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/my_message_notifi_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00"
                android:layout_alignParentRight="true"

                android:textColor="#888888"
                android:textSize="@dimen/textSize12"
                android:id="@+id/my_message_notifi_list_time"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/my_message_notifi_list_msg"
            android:textColor="#333333"
            android:text="@string/my_message_notifi_title"
            android:textSize="@dimen/textSize12"/>
    </LinearLayout>

</LinearLayout>