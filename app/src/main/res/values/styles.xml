<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--去掉启动页白屏-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--弹窗样式-->
    <style name="popup3_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop3_in</item>
        <item name="android:windowExitAnimation">@anim/pop3_out</item>
    </style>

    <!--数据请求动画-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--弹窗样式-->
    <style name="popup2_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop3_in</item>
        <item name="android:windowExitAnimation">@anim/pop3_out</item>
    </style>
    <!--弹窗样式:屏幕右边到左边-->
    <style name="popup4_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop4in</item>
        <item name="android:windowExitAnimation">@anim/pop4out</item>
    </style>

    <!--弹窗样式:底部向上-->
    <style name="popup_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popin</item>
        <item name="android:windowExitAnimation">@anim/popout</item>
    </style>
    <declare-styleable name="MyEmptyListView">
        <attr name="bitmap" format="reference"></attr>
        <attr name="emptyText" format="string"></attr>
    </declare-styleable>
</resources>
