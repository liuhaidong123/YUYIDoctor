<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doctor.yuyi">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--融云Call-->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <!--融云Call-->
    <application
        android:name=".mApplication.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
          >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.InformationMessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.My_setting_about_Activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.My_setting_Activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.My_setting_feadus_Activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.My_setting_contactus_Activity"
            android:launchMode="singleTop" />
        <activity android:name=".activity.My_message_Activity" />
        <activity android:name=".activity.My_message_notification_Activity" />
        <activity android:name=".activity.My_forumPosts_Activity" />
        <activity android:name=".activity.My_praise_Activity" />
        <activity android:name=".activity.My_patientDataList_Activity" />
        <activity android:name=".activity.My_registration_Activity" />
        <activity android:name=".activity.My_registration_Info_Activity" />
        <activity android:name=".activity.Login_Activity" />
        <activity
            android:name=".activity.UserInfo_Activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.PostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CommentInformationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.CardMessageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
<!--融云相关-->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.doctor.yuyi.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rc_file_path" />
        </provider>


        <activity
            android:name=".activity.ConversationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.doctor.yuyi"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <receiver android:name=".RongCloudUtils.SealNotificationReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="io.rong.push.intent.MESSAGE_ARRIVED" />
                <action android:name="io.rong.push.intent.MI_MESSAGE_ARRIVED" />
                <action android:name="io.rong.push.intent.MESSAGE_CLICKED" />
                <action android:name="io.rong.push.intent.MI_MESSAGE_CLICKED" />
            </intent-filter>

        </receiver>
    </application>

</manifest>